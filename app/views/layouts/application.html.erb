<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar">
        <div class="container">
          <div class="navbar-header navbar-left shopname">
            <% if admin_signed_in? %>
              <%= link_to "NAGANO CAKE", admins_root_path, :style=>"color:#ece093;" %>
            <% else %>
              <%= link_to "NAGANO CAKE", root_path, :style=>"color:#ece093;" %>
            <% end %>
          </div>

          <div class="collapse navbar-collapse" id="navbarExample7">
            <ul class="nav navbar-nav navbar-right">

          <!-- カスタマーがログインしている -->
            <% if customer_signed_in? %>
              <li class= "customer_name">
                ようこそ、family_name さん！
              </li>
              <li><%= link_to "マイページ", customer_path(current_customer.id), class: "btn btn-default" %></li>
              <li><%= link_to "商品一覧", items_path, class: "btn btn-default" %></li>
              <li><%= link_to "カート", cart_items_path, class: "btn btn-default" %></li>
              <li><%= link_to "ログアウト", destroy_customer_session_path, class: "btn btn-default", method: :delete %></li>

          <!-- 管理者がログインしている -->
            <% elsif admin_signed_in? %>
              <li><%= link_to "商品一覧", admins_items_path, class: "btn btn-default" %></li>
              <li><%= link_to "会員一覧", admins_customers_path, class: "btn btn-default" %></li>
              <li><%= link_to "注文履歴一覧", admins_orders_path, class: "btn btn-default" %></li>
              <li><%= link_to "ジャンル一覧", admins_genres_path, class: "btn btn-default" %></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, class: "btn btn-default", method: :delete %></li>

          <!-- どちらもログインしていない -->
            <% else %>
              <li><%= link_to "ABOUT", home_about_path, class: "btn btn-default" %></li>
              <li><%= link_to "商品一覧", items_path, class: "btn btn-default" %></li>
              <li><%= link_to "新規登録", new_customer_registration_path, class: "btn btn-default" %></li>
              <li><%= link_to "ログイン", new_customer_session_path, class: "btn btn-default" %></li>
            <% end %>

            </ul>
      　  </div>
    　  </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>