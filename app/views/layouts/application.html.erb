<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <div class="wrapper">
    <header>
        <div class="container">
          <div class="navbar-header navbar-left">
            <% if admin_signed_in? %>
              <%= link_to image_tag("naganocake.png", class: "logo-vw"), admins_root_path %>
            <% else %>
              <%= link_to image_tag("naganocake.png", class: "logo-vw"), root_path %>
            <% end %>
          </div>

            <ul class="nav navbar-nav navbar-right" style="margin: auto;">

          <!-- カスタマーがログインしている -->
            <% if customer_signed_in? %>
              <li class= "customer_name">
                ようこそ、<%= current_customer.full_name %>さん！
              </li>
              <li><%= link_to "マイページ", customer_path, class: "header-menu" %></li>
              <li><%= link_to "商品一覧", items_path, class: "header-menu fas fa-birthday-cake mr-4 text-dark" %></li>
              <li><%= link_to "カート", cart_items_path, class: "header-menu fas fa-shopping-cart mr-4 text-dark" %></li>
              <li><%= link_to "ログアウト", destroy_customer_session_path, class: "header-menu", method: :delete %></li>

          <!-- 管理者がログインしている -->
            <% elsif admin_signed_in? %>
              <li><%= link_to "商品一覧", admins_items_path, class: "header-menu fas fa-birthday-cake mr-4 text-dark" %></li>
              <li><%= link_to "会員一覧", admins_customers_path, class: "header-menu" %></li>
              <li><%= link_to "注文履歴一覧", admins_orders_path, class: "header-menu" %></li>
              <li><%= link_to "ジャンル一覧", admins_genres_path, class: "header-menu" %></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, class: "header-menu", method: :delete %></li>

          <!-- どちらもログインしていない -->
            <% else %>

              <li><%= link_to "ABOUT", home_about_path, class: "header-menu" %></li>
              <li><%= link_to "商品一覧", items_path, class: "header-menu" %></li>
              <li><%= link_to "新規登録", new_customer_registration_path, class: "header-menu" %></li>
              <li><%= link_to "ログイン", new_customer_session_path, class: "header-menu" %></li>

            <% end %>
            </ul>
          </div>


         <!--管理者側のキーワード検索機能-->
          <% if admin_signed_in? %>
              <div class="search-form text-right" style="margin: 0 70px 5px 0;">
                  <%= form_tag(admins_search_path, method: :get) do %>
                    <%= select_tag 'model_type', options_for_select([['商品名', '商品名'], ['会員氏名', '会員氏名']]) %>
                    <%= text_field_tag :content, params[:content],placeholder: "検索" %>
                    <%= submit_tag 'Search' %>
                  <% end %>
              </div>
          <% end%>


    </header>
      <%= yield %>
    <footer class="footer">
         <p class="footer-text">© NAGANO CAKE</p>
    </footer>
  </div>
  </body>
</html>