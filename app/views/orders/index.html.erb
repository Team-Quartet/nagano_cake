<div class="order-index">
	<div class="container">
		<div class="row">
			<br><br><br><div class = "col-sm-offset-1 headline">注文履歴一覧</div>
		</div>
		<div class="row">
			<br><table class="table">
				<tr>
					<th>注文日</th>
					<th>配送先</th>
					<th>注文商品</th>
					<th>支払金額</th>
					<th>ステータス</th>
					<th>注文詳細</th>
				</tr>
				<% @orders.each do |order| %>
				<% if order.customer_id == current_customer.id %>
				<tr>
					<td><%= order.created_at.strftime("%Y年%m月%d日").to_s %></td>
					<td><%= order.postal_code %><br>
						<%= order.address %><br>
						<%= order.receiver_name %></td>
					<td><% order.order_items.each do |order_item| %>
						<%= order_item.item.name %><br>
						<% end %></td>
					<td><%= order.total_price %></td>
					<td><%= order.status %></td>
					<td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
				</tr>
				<% end %>
				<% end %>
			</table>
		</div>
	</div>
</div>
