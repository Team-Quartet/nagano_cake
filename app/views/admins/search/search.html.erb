<% if @model == 'customers' %>
  <h2>検索結果</h2>
  <!--customer一覧 -->
  <table class="table table-hover table-inverse">
    <% if @range == '2' %>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            <th colspan="9"></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%=link_to customer.full_name, admins_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td><% if customer.is_deleted? %>
                       無効
                  <% else %>
                       有効
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>

<% else  @model == 'items' %>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admins_item_path(item.id) %>
            </td>
            <td><%= item.non_taxed_price %></td>
            <td><%= item.genre.name %></td>
            <td><% if item.is_active? %>
                  販売中
                <% else %>
                  売切れ
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
<% end %>
