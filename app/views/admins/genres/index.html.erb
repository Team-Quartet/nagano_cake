<div class="container">
  <div class="row">
	<div class="col-xs-12">
		<h2>ジャンル一覧・追加</h2>

		<!-- ジャンル追加 -->
		<div class="col-xs-8">
			<%= form_for(@genre, url:admins_genres_path) do |f| %>
			<div class="form_area">
				<%= f.label "ジャンル" %>
				<%= f.text_field :name %>

				<%= f.radio_button :is_active, :true %>
				<%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
				<%= f.radio_button :is_active, :false %>
				<%= f.label :is_active, "無効", {value: :false, style: "display: inline-block;"} %>
				<%= f.submit '追加', class: "btn btn-primary btn-md" %>
			</div>
			<% end %>
		</div>

		<!-- ジャンル一覧 -->
		<div class="col-xs-8">
			<table class="table">
				<thead>
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
					</tr>
				</thead>

				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>

						<% if genre.is_active == true %>
						   <td>有効</td>
						<% elsif genre.is_active == false %>
						   <td>無効</td>
						<% end %>

						<td>
							<%= link_to edit_admins_genre_path(genre) do %>
						    <label class="btn btn-primary btn-md">編集する</label>
						    <% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>

	</div>
  </div>
</div>

