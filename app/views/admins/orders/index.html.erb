<div class="row">
	<div class="main col-md-offset-3 col-md-6">

		<h2>注文履歴一覧</h2>

		<table class="table">
			<thead>
				<tr>
					<th>購入日時</th>
					<th>購入者</th>
					<th>注文個数</th>
					<th>注文ステータス</th>
					<th colspan="9"></th>
				</tr>
		    </thead>
		    <tbody>
		    	<% @orders.each do |order| %>
				<tr>
					<td><%= link_to order.created_at, admis_order_path(customer) %></td>

					<td><%= order.customer_id %></td>
					<td><%= order.order_items.count %></td>
			        <td><%= order.status %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
