<div class="container">
        <h2>注文履歴詳細</h2>
	<div class="row">
	    <div class="col-md-2">
			<h3><strong>購入者</strong></h3>
			<h3><strong>配送先</strong></h3>
			<h3><strong>支払方法</strong></h3>
		</div>
		<div class="col-md-10">
			<h3><%= link_to @order.customer.full_name, admins_customer_path(@order.customer) %>
			</h3>
			<h3>〒<%= @order.order_info %></h3>
			<h3><%= @order.payment_method %></h3>
		</div>
	</div>

	<div class="row">
	    <div class="col-md-8">
			<%= form_for(@order, url: admins_order_path(@order)) do |f| %>
				<h3><strong>注文ステータス</strong>  <%= f.select :status, [['入金待ち', '入金待ち'],['入金確認', '入金確認'],['製作中', '製作中'],['発送準備中', '発送準備中'],['発送済み', '発送済み']] %>
				<%= f.submit '更新', class: "btn btn-primary btn-sm" %>
				</h3>
			<% end %>

			<table class="table">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価（税込）</th>
						<th>数量</th>
						<th>小計</th>
						<th>製作ステータス</th>
						<th colspan="1"></th>
					</tr>
				</thead>
				
					<% @order_items.each do |order_item| %>
					<tbody>
					    <tr>
							<td><%= order_item.item.name %></td>
							<td><%= order_item.taxed_price %></td>
							<td><%= order_item.count %></td>
							<td><% order_item.taxed_price * order_item.count %></td>
						  <%= form_for(order_item, url: admins_order_path(order_item.id)) do |f| %>
							<td><%= f.select :making_status, [['着手不可', '着手不可'],['製作待ち', '入金確認'],['製作中', '製作中'],['製作完了', '製作完了']] %></td>
							<td><%= f.submit '更新', class: "btn btn-primary" %>   </td>
						  <% end %>
					    </tr>
					    </tbody>
					<% end %>
				
			</table>
	    </div>

		<div class="col-md-2">
		    <h4><strong>商品合計</strong></h4>
		    <h4><strong>送料</strong></h4>
		    <h4><strong>請求金額合計</strong></h4>
		</div>
		<div class="col-md-2">
		    <h4><%= @order.total_price - @order.shipping_fee %>円</h4>
		    <h4><%= @order.shipping_fee %>円</h4>
		    <h4><%= @order.total_price %>円</h4>
		</div>
	</div>
</div>