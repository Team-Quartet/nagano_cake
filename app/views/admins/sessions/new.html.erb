<div class="container">
<div class="row">
  <div class="col-md-offset-3 col-md-6">

    <h2><%= image_tag 'naganocake2.png', :height => '40' %> 管理者ログイン</h2>

    <div class="col-md-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <dl>
      <div class="field">
        <dt><%= f.label 'メールアドレス' %></dt>
        <dd><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 50; %></dd>
      </div>

      <div class="field">
        <dt><%= f.label 'パスワード　　' %></dt>
        <dd><%= f.password_field :password, autocomplete: "current-password", size: 50; %></dd>
      </div>
    </dl>


      <div class="actions" style="text-align:center;">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>


</div>
</div>
