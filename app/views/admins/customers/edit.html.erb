<div class="row">
	<div class="main col-md-offset-3 col-md-6">
		<h3><%= @customer.full_name %>さんの会員情報編集</h3>

			<div class="customer_form">
				<%= "会員ID" %>
				<%= @customer.id %>
			</div>

		<%= form_for(@customer, url: admins_customer_path) do |f| %>
			<div class="customer_form">
				<%= f.label "氏名" %>
				<%= f.text_field :family_name, autofocus: true %>
				<%= f.text_field :first_name, autofocus: true %>
			</div>
			<div class="customer_form">
				<%= f.label "フリガナ" %>
				<%= f.text_field :kana_family_name, autofocus: true %>
				<%= f.text_field :kana_first_name, autofocus: true %>
			</div>
			<div class="customer_form">
				<%= f.label  "郵便番号" %>
				<%= f.text_field :postal_code, autofocus: true, size: 40 %>
			</div>
			<div class="customer_form">
				<%= f.label  "住所" %>
				<%= f.text_field :address, autofocus: true, size: 40 %>
			</div>
			<div class="customer_form">
				<%= f.label  "電話番号" %>
				<%= f.text_field :phone_number, autofocus: true, size: 40 %>
			</div>
			<div class="customer_form">
				<%= f.label  "メールアドレス" %>
				<%= f.email_field :email, autofocus: true, size: 40 %>
			</div>
			<div class="customer_form">
				<%= f.label "会員ステータス" %>
				<%= f.radio_button :is_deleted, :false %>
				<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
				<%= f.radio_button :is_deleted, :true %>
				<%= f.label :is_deleted, "退会済み", {value: :true, style: "display: inline-block;"} %>
			</div>

			<div class="col-xs-1">
				<%= f.submit '変更を保存する', class: "btn btn-primary btn-md" %>
			</div>
		<% end %>
	</div>
</div>
