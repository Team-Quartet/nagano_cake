<div class="row">
	<div class="main col-md-offset-3 col-md-6">
		<h3><%= @customer.full_name %>さんの会員情報編集</h3>



		<%= form_for(@customer, url: admins_customer_path) do |f| %>
		<dl>

			<div class="customer_form">
				<dt><%= "会員ID" %></dt>
				<dd><%= @customer.id %></dd>
			</div>

			<div class="customer_form">
				<dt><%= f.label "氏名" %></dt>
				<dd>
				<%= f.text_field :family_name, autofocus: true, size: 18 %>
				<%= f.text_field :first_name, autofocus: true, size: 18 %>
			  </dd>
			</div>
			<div class="customer_form">
				<dt><%= f.label "フリガナ" %></dt>
				<dd>
				<%= f.text_field :kana_family_name, autofocus: true, size: 18 %>
				<%= f.text_field :kana_first_name, autofocus: true, size: 18 %>
			  </dd>
			</div>
			<div class="customer_form">
				<dt><%= f.label  "郵便番号" %></dt>
				<dd><%= f.text_field :postal_code, autofocus: true, size: 40 %></dd>
			</div>
			<div class="customer_form">
				<dt><%= f.label  "住所" %></dt>
				<dd><%= f.text_field :address, autofocus: true, size: 40 %></dd>
			</div>
			<div class="customer_form">
				<dt><%= f.label  "電話番号" %></dt>
				<dd><%= f.text_field :phone_number, autofocus: true, size: 40 %></dd>
			</div>
			<div class="customer_form">
				<dt><%= f.label  "メールアドレス" %></dt>
				<dd><%= f.email_field :email, autofocus: true, size: 40 %></dd>
			</div>
			<div class="customer_form">
				<dt><%= f.label "会員ステータス" %></dt>
				<dd>
				<%= f.radio_button :is_deleted, :false %>
				<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
				<%= f.radio_button :is_deleted, :true %>
				<%= f.label :is_deleted, "退会済み", {value: :true, style: "display: inline-block;"} %>
			  </dd>
			</div>
		</dl>
			<div class="col-xs-1">
				<%= f.submit '変更を保存する', class: "btn btn-primary btn-md" %>
			</div>
		<% end %>
	</div>
</div>
