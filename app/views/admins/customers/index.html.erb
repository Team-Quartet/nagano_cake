<div class="row">
	<div class="main col-md-offset-3 col-md-6">

		<h2>会員一覧</h2>
		<table class="table">
			<thead>
				<tr>
					<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
					<th colspan="9"></th>
				</tr>
		    </thead>
		    <tbody>
		    	<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td><%=link_to [customer.family_name, customer.first_name], admins_customer_path(customer) %></td>
					<td><%= customer.email %></td>
			        <td><%= customer.is_deleted %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>
</div>


