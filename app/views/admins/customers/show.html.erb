<div class="row">
	<div class="main col-md-offset-3 col-md-6">
		<h3><%= @customer.full_name %>さんの会員詳細</h3>

		<table class="table">
			<tr>
				<th>顧客ID</th>
				<th><%= @customer.id %>
					<%= @customer.is_deleted %>
				</th>
			</tr>
			<tr>
				<th>氏名</th>
				<th><%= @customer.family_name %>
					<%= @customer.first_name %>
				</th>
			</tr>
			<tr>
				<th>フリガナ</th>
				<th><%= @customer.kana_family_name %>
					<%= @customer.kana_first_name %>
				</th>
			</tr>
			<tr>
				<th>郵便番号</th>
				<th><%= @customer.postal_code %></th>
			</tr>
			<tr>
				<th>住所</th>
				<th><%= @customer.address %></th>
			</tr>
			<tr>
				<th>電話番号</th>
				<th><%= @customer.phone_number %></th>
			</tr>
			<tr>
				<th>メールアドレス</th>
				<th><%= @customer.email %></th>
			</tr>
		</table>

		<div class="col-xs-2">
			<%= link_to '編集する', edit_admins_customer_path(@customer), class: "btn btn-primary btn-md" %>
		</div>

		<div class="col-xs-4">
			<%= link_to '注文履歴一覧を見る', admins_orders_path, class: "btn btn-primary btn-md" %>
		</div>

	</div>
</div>