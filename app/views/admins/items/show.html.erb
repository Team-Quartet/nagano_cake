<div class="container">
  <div class="row">
	<div class="col-lg-12">
		<h2><%= image_tag 'naganocake2.png', :height => '40' %> 商品詳細</h2>

		<div class="col-lg-4">
			<div class="img_field">
				<%= attachment_image_tag(@item, :image, :size => '300x240', fallback: "no_image.jpg") %>
			</div>
		</div>

		<div class="col-lg-6">
			<table class="table">
				<tr>
					<th>商品名</th>
					<td><%= @item.name %></td>
				</tr>
				<tr>
					<th>商品説明</th>
					<td><%= @item.introduction %></td>
				</tr>
				<tr>
					<th>ジャンル</th>
					<td><%= @item.genre.name %></td>
				</tr>
				<tr>
					<th>税込価格（税抜価格）</th>
					<td><%= (@item.non_taxed_price * 1.1).floor %>（<%= @item.non_taxed_price %>）円</td>
				</tr>
				<tr>
					<th>販売ステータス</th>
					<td>
						<% if @item.is_active? %>
						  販売中
						<% else %>
						  売切れ
						<% end %>
					</td>
				</tr>
			</table>
		</div>

		<div class="col-lg-2" style="position:absolute; top: 380px; right: 15px;">
			<%= link_to edit_admins_item_path do %>
			<label class="btn btn-primary btn-md">編集する</label>
			<% end %>
		</div>

	</div>
  </div>
</div>
