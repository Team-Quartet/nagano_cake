<div class="container">
  <div class="row">
	<div class="col-xs-12">
		<h3>商品一覧</h3>
		<table class="table">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>

			<tbody>
				<% @items.each do |item| %>
				<tr>
					<td><%= item.id %></td>
					<td>
						<%= link_to item.name, admins_item_path(item.id) %>
					</td>
					<td><%= item.non_taxed_price %></td>
					<td><%= item.genre.name %></td>
					<td>
						<% if item.is_active? %>
						  <p>販売中</p>
						<% else %>
						  <p>売切れ</p>
						<% end %>
					</td>
				</tr>
			</tbody>
			<% end %>
		</table>
	</div>
  </div>
</div>
