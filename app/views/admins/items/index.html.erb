<div class="container">
  <div class="row">
	<div class="col-jg-12">
		<h2>商品一覧</h2>

		<div class="col-xs-offset-11 col-xs-1">
		<a id="fab" <%= link_to new_admins_item_path do %>
			<i class="fas fa-plus"></i>
			<% end %>
		</a>
	    </div>
	</div>

	<div class="col-lg-12">
		<table class="table">
			<thead>
				<tr class= "active">
					<th>商品ID</th>
					<th>商品名</th>
					<th>ジャンル</th>
					<th>税抜価格</th>
					<th>ステータス</th>
				</tr>
			</thead>

			<tbody>
				<% @items.each do |item| %>
				<tr>
					<td><%= item.id %></td>
					<td>
						<%= link_to item.name, admins_item_path(item.id) %>
					</td>
					<td><%= item.genre.name %></td>
					<td><%= item.non_taxed_price %></td>
					<td><% if item.is_active? %>
						<div class="status">
						  <p>販売中</p>
						<% else %>
						  <p>売切れ</p>
						<% end %>
					</div>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>

  </div>
</div>
