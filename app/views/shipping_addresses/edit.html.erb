<div class="container">
  <div class="row">
    <div class="col-lg-12">
 
      <% if @shipping_address.errors.any? %>
        <h3><%= @shipping_address.errors.count %>error occurrence</h3>
        <ul>
          <% @shipping_address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

			<h2 class="title">配送先編集</h2>
			<div class="row">
    		<%= form_for (@shipping_address) do |f| %>
    		<%= f.label :郵便番号%>
    		<%= f.text_field :postal_code %></br>

    		<%= f.label :住所%>
    		<%= f.text_field :address %></br>

    		<%= f.label :宛名%>
    		<%= f.text_field :receiver_name %></br>

    		<%= f.submit "編集する", class: "btn btn-primary" %>

  			<% end %>
  		</div>
  	</div>
	</div>
</div>
