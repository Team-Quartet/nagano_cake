<div class="container">
  <div class="row">

    <div class="col-md-2 genre-form">
      <%= render 'layouts/genre_seach', genres: @genres %>
    </div>
    <!--URLにジャンルIDが含まれていたらジャンル商品を表示する-->
    <% if params[:genre_id] %>
      <div class="col-xs-10">
        <h2><%= @genre.name %>一覧
          <span style="font-size: 20px">（全<%= @items.count %>件）</span>
        </h2>
          <% @items.each do |item| %>
            <div class = "col-sm-4">
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :image, size: '200x140', fallback: 'no_image.jpg' %><br>
                <%= item.name %>
              <% end %><br>
              <% taxed_price = item.non_taxed_price * 1.1 %>
              ¥<%= taxed_price.floor %>　(税込)<br>
            </div>
          <% end %>
        <%= paginate @items, class: "paginate"%>
      </div>

    <% else %>
    <!--URLにジャンルIDがない時は商品一覧を表示する-->
      <div class="col-xs-10">
        <h2>
          商品一覧<span style="font-size: 20px">（全<%= @items.count %>件）</span>
        </h2>
          <% @items.each do |item| %>
            <div class = "col-sm-4">
              <%= link_to item_path(item.id) do %>
      					<%= attachment_image_tag item, :image, size: '200x140', fallback: 'no_image.jpg' %><br>
      					<%= item.name %>
              <% end %><br>
                <% taxed_price = item.non_taxed_price * 1.1 %>
                ¥<%= taxed_price.floor %>　(税込)<br>
            </div>
          <% end %>
  			<%= paginate @items, class: "paginate"%>
      </div>
    <% end %>
  </div>
</div>
