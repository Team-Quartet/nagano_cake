<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <!-- ジャンルサイドバーをrenderで挿入 -->
    </div>

    <div class="col-xs-10">
      <h2>
        商品一覧<span style="font-size: 20px">（全<%= @items.count %>件）</span>
      </h2>
        <% @items.each do |item| %>
        <div class = "col-sm-4">
          <%= link_to item_path(item.id) do %>
					<%= attachment_image_tag item, :image, size: '200x140', fallback: 'no_image.jpg' %><br>
					<%= item.name %><% end %><br>
          <% taxed_price = item.non_taxed_price * 1.1 %>
          ¥<%= taxed_price.floor %>　(税込)<br>
        </div>
          <% end %>
			<%= paginate @items, class: "paginate"%>
    </div>
  </div>
</div>
