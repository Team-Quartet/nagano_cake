<div class="container">
  <div class="row">

    <div class="col-md-2 genre-form">
      <%= render 'layouts/genre_seach', genres: @genres %>
    </div>

      <div class="col-md-5 col-xs-6">
        <div class="item-img-area">
        <%= attachment_image_tag @item, :image, size: '350x280', fallback: 'no_image.jpg' %>
        </div>
      </div>

      <div class="col-md-5 col-xs-6">
        <h2><%= @item.name %></h2>

        <div class="item_text">
          <%= @item.introduction %>
        </div>

        <div class="item-price">
        <% taxed_price = @item.non_taxed_price * 1.1 %>
               ¥<%= taxed_price.floor %> (税込)
        </div>

        <div class="cart-link">
               <%= form_for @cart_item, url: cart_items_path(@cart_item) do |f| %>
               <%= f.hidden_field :item_id, :value => @item.id%>
               <%= f.number_field :count, placeholder: "個数選択", min: 1, max: 99 %>
               <%= f.submit "カートに入れる", class: 'btn btn-primary' %>
               <% end %>
        </div>
      </div>

  </div>
</div>