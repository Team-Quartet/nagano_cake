<div class="container">
  <div class="row">
    <div class="col-lg-12">
			<h2 class="title">マイページ</h2>
  	</div>

    <strong>登録情報</strong>
    <%= link_to "編集する", edit_customer_path, class: "btn btn-primary", style: "margin-left:12px;" %>
    <%= link_to 'パスワードを変更する', edit_customer_registration_path, class: "btn btn-primary", style: "margin-left:12px;" %></div><br />

    <div class="row">
      <table class="table table-bordered col-lg-8">
        <tr class="thead-light">

          <th  style="width:25%">氏名</th>
          <td  style="width:75%">
            <%= @customer.family_name %>
            <%= @customer.first_name %>
          </td>
        </tr>

        <tr class="thead-light">
          <th>カナ</th>
          <td>
          <%= @customer.kana_family_name %>
          <%= @customer.kana_first_name %>
          </td>
        </tr>

        <tr class="thead-light">
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr class="thead-light">
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr class="thead-light">
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>

        <tr class="thead-light">
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div><br />

    <div style="width:6em; float:left;"><strong>発送先</strong></div>
 	  <%= link_to "一覧を見る", shipping_addresses_path, class: "btn btn-primary" %><br />

    <div style="width:6em; float:left; margin-top:12px;"><strong>注文履歴</strong></div>
    <%= link_to '一覧を見る', orders_path, class: "btn btn-primary", style: "margin-top:12px;" %></div>
  </div>
</div>
