<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2><%= image_tag 'naganocake2.png', :height => '40' %> 登録情報編集</h2>
    </div>

    <%= form_for(@customer) do |f| %>
    <div class="row">
      <% if @customer.errors.any? %>
      <h3><%= @customer.errors.count %>error occurrence</h3>

      <ul>
        <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <div class="col-md-offset-3 col-md-6, col-xs-10">
        <dl>
          <dt><%= f.label :氏名%></dt>
            <dd>（姓）　<%= f.text_field :family_name %>
                （名）　<%= f.text_field :first_name %></dd>

          <dt><%= f.label :フリガナ %></dt>
            <dd>（セイ）<%= f.text_field :kana_family_name %>
                （メイ）<%= f.text_field :kana_first_name %></dd>

          <dt><%= f.label :郵便番号 %>(ハイフンなし)</dt>
           <dd><%= f.text_field :postal_code %></dd>

          <dt><%= f.label :住所 %></dt>
            <dd><%= f.text_field :address, size:58 %></dd>

          <dt><%= f.label :電話番号 %>(ハイフンなし)</dt>
            <dd><%= f.text_field :phone_number %></dd>

          <dt><%= f.label :メールアドレス %></dt>
            <dd><%= f.text_field :email %></dd>
        </dl>
      </div>
    </div>

    <div class="col-md-offset-3 col-md-6">
      <div class="actions" style="text-align: center;">
        <%= f.submit "変更を保存する", class: "btn btn-primary" %>
      </div>
      <div class="actions" style="text-align: right;">
        <%= link_to "退会する", unsubscribe_customer_path, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>

  </div>
</div>
