<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">

      <h2><%= image_tag 'naganocake2.png', :height => '40' %> 会員の方はこちらからログイン</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <dl>
          <div class="field">
            <dt><%= f.label 'メールアドレス' %></dt>
            <dd><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 50; %></dd>
          </div>

          <div class="field">
            <dt><%= f.label 'パスワード' %></dt>
            <dd><%= f.password_field :password, autocomplete: "current-password", size: 50; %></dd>
          </div>
        </dl>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
        <% end %><br>

        <div class="actions" style="text-align: center" >
          <%= f.submit "ログイン", class: "btn btn-primary"%>
        </div><br><br />
      <% end %>

      <%= render "customers/shared/links" %>
  </div>

</div>
</div>
</div>

