<div class="row">
  <div class="main col-md-offset-3 col-md-6">

    <h2>新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

       <div class="field">
        <%= f.label '名前' %>
        <%= '(姓)' %>
        <%= f.text_field :family_name, autofocus: true, class: 'family_name' %>
        <%= '(名)' %>
        <%= f.text_field :first_name, autofocus: true, class: ':first_name' %>
      </div>

         <div class="field">
        <%= f.label 'フリガナ' %>
        <%= '(セイ)' %>
        <%= f.text_field :kana_family_name, autofocus: true, class: 'kana_family_name' %>
        <%= '(メイ)' %>
        <%= f.text_field :kana_first_name, autofocus: true, class: 'kana_first_name' %>
      </div>

      <div class="field">
        <%= f.label 'メールアドレス' %>
        <%= f.email_field :email, autofocus: true, class: 'email' %>
      </div>

      <div class="field">
          <%= f.label '郵便番号(ハイフンなし)' %>
          <%= f.text_field :postal_code, autofocus: true, class: 'postal_code' %>
      </div>

       <div class="field">
          <%= f.label '住所' %>
          <%= f.text_field :address, autofocus: true, class: 'address' %>
        </div>

        <div class="field">
          <%= f.label '電話番号(ハイフンなし)' %>
          <%= f.text_field :phone_number, autofocus: true, class: 'phone_number' %>
        </div>

      <div class="field">
        <%= f.label 'パスワード' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'password' %>
      </div>

      <div class="field">
        <%= f.label 'パスワード(確認用)' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div><br />
    <% end %>

    <%= render "customers/shared/links" %>
  </div>
</div>
